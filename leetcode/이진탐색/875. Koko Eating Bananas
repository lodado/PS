import math

class Solution:
    def minEatingSpeed(self, piles: List[int], h: int) -> int:
        if not piles:
            return 0
        
        if len(piles) ==1:
            return math.ceil(piles[0]/h)
        
        left, right = 0, max(piles)

        while left<right:
            mid = (left + right) // 2
            hour = 0

            for i in piles:
                hour += math.ceil(i / mid)

            if h<hour:
                left = mid+1
            else:
                right = mid
        
        return left
